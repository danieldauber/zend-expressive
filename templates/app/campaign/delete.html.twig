{% extends '@layout/default.html.twig' %}

{% block title %}
    Edição de Campanha - {{  parent() }}
{% endblock %}

{% block page_header %}
    Edição de campanha - {{  form.getObject().name }}
{% endblock %}

{% block content %}

    {% include '@app/campaign/_form_elements.html.twig' %}

    {% set submit = form.get('submit') %}
    {% do submit.setAttribute('class', 'btn btn-danger').setLabel('Confirmar Exclusão') %}

    {% do form.setAttribute('action', url('campaign.delete', {id: form.getObject().id})) %}
    {% do form.prepare() %}

    <div class="row">
        <div class="col-md-8">
            <div class="box box-danger">
                <div class="box-body">
                    {{ form().openTag(form) | raw }}
                    {{ formHidden(form.get('_method')) }}
                    <fieldset disabled>
                        {% include '@app/campaign/_form.html.twig' %}
                    </fieldset>
                    <div class="box-footer">
                        {{ formButton(submit) }}
                    </div>
                    {{ form().closeTag() | raw }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}

