{% extends '@layout/default.html.twig' %}

{% block title %}
    Listagem de Contatos
{% endblock %}

{% block content %}

    <div class="row">
        <div class="box">
            <div class="box-body">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th style="width: 10px;">#</th>
                            <th>name</th>
                            <th>email</th>
                        </tr>
                        {% for customer in customers %}
                           <tr>
                               <td>{{ customer.id }}</td>
                               <td>{{ customer.name }}</td>
                               <td>{{ customer.email }}</td>
                           </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

        </div>
    </div>

{% endblock %}

{% block page_header %}
    Listagem de Contatos
{% endblock %}