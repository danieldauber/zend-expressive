{% extends '@layout/default.html.twig' %}

{% block title %}
    Edição de Contato - {{  parent() }}
{% endblock %}

{% block page_header %}
    Edição de contato - {{  form.getObject().name }}
{% endblock %}

{% block content %}

    {% set name = form.get('name') %}
    {% do name.setAttribute('class', 'form-control') %}

    {% set email = form.get('email') %}
    {% do email.setAttribute('class', 'form-control') %}

    {% set submit = form.get('submit') %}
    {% do submit.setAttribute('class', 'btn btn-primary').setLabel('Incluir') %}

    {% do form.setAttribute('action', url('customer.update', {id: form.getObject().id})) %}
    {% do form.prepare() %}

    <div class="row">
        <div class="col-md-8">
            <div class="box box-primary">
                <div class="box-body">
                    {{ form().openTag(form) | raw }}
                        <div class="box-body">
                            <div class="form-group">
                                {{ formRow(name) }}
                            </div>
                            <div class="form-group">
                                {{ formRow(email) }}
                            </div>
                        </div>
                        <div class="box-footer">
                            {{ formButton(submit) }}
                        </div>
                    {{ form().closeTag() | raw }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}

